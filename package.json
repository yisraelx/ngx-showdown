{
  "name": "ngx-showdown",
  "description": "Angular X Showdown Module.",
  "version": "0.0.0-semantically-released",
  "license": "MIT",
  "author": {
    "name": "Yisrael Eliav",
    "email": "yisraelx@gmail.com",
    "url": "https://github.com/yisraelx/"
  },
  "main": "lib/index.js",
  "browser": "bundles/ngx-showdown.umd.js",
  "typings": "lib/index.d.ts",
  "files": [
    "bundles",
    "lib",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "ng",
    "ng2",
    "ngx",
    "angular",
    "angular2",
    "angularx",
    "markdown",
    "md",
    "showdown"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:lib": "ngc --project src",
    "build:bundles": "webpack --progress --profile --bail",
    "build:demo": "webpack --config demo/webpack.config.js --progress --profile --bail",
    "build:gh-pages": "npm run build:demo -- --output-public-path /ngx-showdown/",
    "ci:before": "npm prune",
    "ci:script": "run-s ready",
    "ci:after": "run-s coverage:report semantic-release ci:deploy",
    "ci:deploy": "run-s build:gh-pages && git config --global user.email 'gh-pages@localhost' && git config --global user.name 'gh-pages' && gh-pages -d demo/build -r https://$GH_TOKEN@github.com/yisraelx/ngx-showdown.git -x",
    "coverage:check": "istanbul check-coverage --statements 80 --branches 80 --functions 80 --lines 80",
    "coverage:report": "codecov -f coverage/*.json",
    "clean": "rimraf lib bundles demo/build coverage",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "demo": "webpack-dev-server --config demo/webpack.config.js --progress",
    "deploy": "run-s build:gh-pages && gh-pages -d demo/build",
    "lint": "run-s lint:*",
    "lint:demo": "tslint demo/src/**/*.ts",
    "lint:lib": "tslint src/**/*.ts",
    "lint:test": "tslint test/**/*.ts",
    "precommit": "run-s ready",
    "ready": "run-s clean lint test coverage:check",
    "start": "run-s demo",
    "test": "karma start",
    "watch:lib": "tsc --project src --watch",
    "watch:test": "npm test -- --auto-watch --no-single-run",
    "semantic-release": "semantic-release pre && run-s build:lib build:bundles && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yisraelx/ngx-showdown.git"
  },
  "bugs": {
    "url": "https://github.com/yisraelx/ngx-showdown/issues"
  },
  "homepage": "http://yisraelx.github.io/ngx-showdown",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "helpMessage": "Commit message violates the rules defined for this project. Please, execute `npm run commit` to generate a correct commit message with `commitizen`"
    }
  },
  "dependencies": {
    "@types/showdown": "^1.4.32"
  },
  "peerDependencies": {
    "@angular/core": "^4.3.2",
    "@angular/http": "^4.3.2",
    "showdown": "^1.7.1"
  },
  "devDependencies": {
    "@angular/animations": "^4.3.2",
    "@angular/cdk": "^2.0.0-beta.8",
    "@angular/common": "^4.3.2",
    "@angular/compiler": "^4.3.2",
    "@angular/compiler-cli": "^4.3.2",
    "@angular/core": "^4.3.2",
    "@angular/forms": "^4.3.2",
    "@angular/http": "^4.3.2",
    "@angular/material": "^2.0.0-beta.8",
    "@angular/platform-browser": "^4.3.2",
    "@angular/platform-browser-dynamic": "^4.3.2",
    "@angular/router": "^4.3.2",
    "@types/core-js": "^0.9.42",
    "@types/jasmine": "^2.5.53",
    "@types/node": "^8.0.17",
    "@types/webpack": "^3.0.5",
    "angular2-template-loader": "^0.6.2",
    "clean-webpack-plugin": "^0.1.16",
    "codecov": "^2.2.0",
    "codelyzer": "^3.1.2",
    "commitizen": "^2.9.6",
    "core-js": "^2.4.1",
    "css-loader": "^0.28.4",
    "cz-conventional-changelog": "^2.0.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "gh-pages": "^1.0.0",
    "hammerjs": "^2.0.8",
    "html-loader": "^0.5.0",
    "html-webpack-plugin": "^2.29.0",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "istanbul-instrumenter-loader": "^3.0.0",
    "jasmine-core": "^2.6.4",
    "karma": "^1.7.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-remap-coverage": "^0.1.4",
    "karma-source-map-support": "^1.2.0",
    "karma-webpack": "^2.0.4",
    "npm-run-all": "^4.0.2",
    "null-loader": "^0.1.1",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "rxjs": "^5.4.2",
    "semantic-release": "^6.3.6",
    "showdown": "^1.7.1",
    "style-loader": "^0.18.2",
    "ts-loader": "^2.3.2",
    "tslint": "^5.5.0",
    "typescript": "^2.4.2",
    "validate-commit-msg": "^2.13.1",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.6.1",
    "zone.js": "^0.8.16"
  }
}
